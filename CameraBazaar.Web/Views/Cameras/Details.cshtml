@model CameraDetails
@{
    ViewData["Title"] = "Details";
}
<h1>@Model.SellerName</h1>
<form class="row" style="border:solid;padding:10px;margin:10px">
    <h2>

        @Model.Make - @Model.Model - $@Model.Price - <span>
            @if (Model.Quantity <= 0)
            {
                <span style="color:red"><strong>OUT OF STOCK</strong></span>
            }
            @if (Model.Quantity > 0)
            {
                <span style="color:green"><strong>IN STOCK</strong></span>
            }
        </span>
    </h2>
    <div><a href="/users/details/@Model.User.Id">@Model.SellerName</a></div>
    <div class="col-lg-4" >
        <img width="300" height="300" src="@Model.ImageUrl" />
    </div>
    <div class="form-group">
        <strong>Is Full Frame: @(Model.IsFullFrame == true ? "Yes" : "No") </strong>
    </div>
    <div class="form-group">
        <strong>Min Shutter Speed: @Model.MinShutterSpeed"</strong>
    </div>
    <div class="form-group">
        <strong>Max Shutter Speed: 1/@Model.MaxShutterSpeed</strong>
    </div>
    <div class="form-group">
        <strong>Min ISO: @Model.MinISO</strong>
    </div>
    <div class="form-group">
        <strong>Max ISO: @Model.MaxISO</strong>
    </div>
    <div class="form-group">
        <strong>Light Metering: @Model.LightMetering</strong>
    </div>
    <div class="form-group">
        <strong>Description: @Model.Description</strong>
    </div>
</form>


   